override_git_prompt_colors() {
  GIT_PROMPT_THEME_NAME="Minimal_Reo_Cool"

  function prompt_callback {
    local FULLPATH=$(pwd)
    if [[ "$FULLPATH" == "$HOME"* ]]; then
      local DISPLAY_PATH="~${FULLPATH#$HOME}"
    else
      local DISPLAY_PATH="$FULLPATH"
    fi
    gp_set_window_title "$DISPLAY_PATH"
    echo -n "${Cyan}${DISPLAY_PATH}${ResetColor}"
  }

  # Git表示内容を寒色系で統一
  GIT_PROMPT_BRANCH="${BoldCyan}"           # ブランチ名
  GIT_PROMPT_STAGED=" ${Cyan}s_"            # ステージ済み
  GIT_PROMPT_CONFLICTS=" ${BoldMagenta}×"   # コンフリクト
  GIT_PROMPT_CHANGED=" ${BoldCyan}+_"       # 変更あり
  GIT_PROMPT_UNTRACKED=" ${BoldMagenta}u_"  # 未追跡ファイル
  GIT_PROMPT_STASHED=" ${Magenta}⚑"         # stashあり
  GIT_PROMPT_CLEAN=""                       # クリーン状態では何も表示しない

  GIT_PROMPT_PREFIX=" ["                     # Git情報の前
  GIT_PROMPT_SUFFIX="]"                      # Git情報の後
  GIT_PROMPT_SEPARATOR=" | "                 # 各項目の区切り

  GIT_PROMPT_REMOTE="${White} "        # push/pull 差分（↑↓）が表示される場合の色はこの範囲内

  GIT_PROMPT_COMMAND_OK="{BoldCyan} ● "                   # コマンド成功時の表示
  GIT_PROMPT_COMMAND_FAIL="${BoldMagenta} ✘ " # コマンド失敗時

  GIT_PROMPT_START_USER=""
  GIT_PROMPT_END_USER=" ▶ "
  GIT_PROMPT_END_ROOT=" # "
}

reload_git_prompt_colors "Minimal_Reo_Cool"
